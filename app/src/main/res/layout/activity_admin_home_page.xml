<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_files.AdminHomePage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ParkSpace"
        android:fontFamily="@font/rowdies_bold"
        android:textSize="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="NAME:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Name of owner"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Company Name:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Name of the company"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Contact No.:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Number"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Email:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="email"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="City:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="City"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="State:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="State"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Address:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="address"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="Used ParkSpaces:"/>

            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:textSize="15dp"
                android:text="no of slots"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/buttonBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/TRANSPERENT"
        android:fontFamily="@font/rowdies_bold"
        android:textSize="20sp"
        android:text="@string/upcoming_bookings" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/TRANSPERENT"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rowdies_bold"
        android:textSize="20dp"
        android:text="History" />
</LinearLayout>